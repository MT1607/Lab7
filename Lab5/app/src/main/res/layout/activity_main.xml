<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="@drawable/backround">

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Mon Ngon"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/BtnBanhCanh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Banh Canh"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Txt1"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/BtnChaoluon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Chao Luon"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/BtnBanhCanh"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/BtnPho"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pho Bo"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/BtnChaoluon"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/BtnThoat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Thoat"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/BtnPho"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>